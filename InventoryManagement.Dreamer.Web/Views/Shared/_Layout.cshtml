<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/themes/base/south-street/jquery-ui-1.10.3.custom.min.css" rel="stylesheet" />
    @Styles.Render("~/Content/css",
                   "~/Content/kendo/css",
                   "~/Content/bootstrap/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav>
        <div class="navbar-inner container-fluid">
            <div class="row-fluid">
                <div class="span6">
                    <a id="GoToHome" href="#" class="home menu-icon-size keep-left"></a>
                </div>
                <div class="span6">
                    <a href="javascript:document.getElementById('logoutForm').submit()" class="logout menu-icon-size keep-right"></a>
                </div>
            </div>
        </div>
        @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
        {
            @Html.AntiForgeryToken()   
        }
    </nav>
    @Scripts.Render("~/bundles/jquery",
                     "~/bundles/jqueryui",
                     "~/bundles/kendo",
                     "~/Scripts/SiteScript")
    @Scripts.Render("~/bundles/jqueryval")
    <div id="WaitingContiner" hidden class="WaitingBarCenter">
        <div id="loaderImage" class="watingDivInCenter">
        </div>
    </div>
    @RenderBody()

    @* @Styles.Render("~/Content/kendo")
    @Scripts.Render("~/bundles/kendo")
   *@ @RenderSection("scripts", required: false)
</body>
</html>
